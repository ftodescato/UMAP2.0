section(id="thingsList" class="container-fluid" )
  ul(class="breadcrumb")
    li
      a(ui-sref="root.user()") Home
    li(class="active") Gestione Oggetti
  h1(class="text-center page-header") Lista degli oggetti presenti
  div(class="row")
    div(class="col-xs-12")
      input(class="form-control" ng-model="searchThingTypes.$" placeholder="cerca con qualsiasi valore")
  div(class="table-responsive")
    table(class="table")
      thead
        th 
          a(class="btn" ng-click="order('thingID')") 
            strong ID 
        th 
          a(class="btn" ng-click="order('name')") 
            strong Nome        
        th 
          a(class="btn" ng-click="order('description')") 
            strong Descrizione       
        th 
          a(class="btn" ng-click="order('thingTypeID')") 
            strong ID Modello  
        th Azioni     
      tbody
        tr(ng-repeat="thing in things |  orderBy:predicate:reverse | filter:searchThingTypes:strict track by $index ")
          td {{thing.thingID}}
          td {{thing.name}}
          td {{thing.description}}
          td {{thing.thingTypeID}}
          td 
            a(ui-sref="root.user.thingDetails({id:thing.thingID})") Dettagli
            
  
