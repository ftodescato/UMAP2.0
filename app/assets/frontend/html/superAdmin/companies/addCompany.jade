section(id="companies")
  ul(class="breadcrumb")
    li
      a(ui-sref="root.superAdmin()") Home
    li
      a(ui-sref="root.superAdmin.companies()") Gestione Companies
    li(class="active") Nuova company
  h1(class="page-header text-center") Inserisci una nuova compagnia
  div(class="container-fluid")
    div(class="row")
      form(ng-submit="addCompany()" class="col-xs-6 col-xs-offset-3")
        label(for="companyBusinessName" ) Business name    
        input(type="text" class="form-control" id="companyBusinessName" ng-model="company.companyBusinessName" placeholder="nome company")
        br
        label(for="companyAddress" ) Indirizzo    
        input(type="text" class="form-control" id="companyAddress" ng-model="company.companyAddress" placeholder="indirizzo company")
        br
        label(for="companyCity" ) Città      
        input(type="text" class="form-control" id="companyCity" ng-model="company.companyCity" placeholder="città")
        br
        label(for="companyCAP" ) CAP      
        input(type="text" class="form-control" id="companyCAP" ng-model="company.companyCAP" placeholder="CAP")
        br
        label(for="companyPIVA" ) PIVA  
        input(type="text" class="form-control" id="companyPIVA" ng-model="company.companyPIVA" placeholder="company name")
        br
        
        label(for="companyDescription" ) Descrizione     
        input(type="text" class="form-control" id="companyDescription" ng-model="company.companyDescription" placeholder="descrione company")
        br
        label(for="companyLicenseExpiration" ) Scadenza licenza     
        input(type="text" class="form-control" id="companyLicenseExpiration" ng-model="company.companyLicenseExpiration" placeholder="company name")
        br
        
        label(for="companyName" ) Nome della company      
        input(type="text" class="form-control" id="companyName" ng-model="company.companyName" placeholder="company name")
        br
        
        button(type='submit' class="btn btn-success") Aggiungi
