PUT         /api/thingsSA/:id                  controllers.superAdmin.ThingController.updateThing(id: java.util.UUID)
DELETE      /api/thingsSA/:id                  controllers.superAdmin.ThingController.delete(id: java.util.UUID)

GET         /api/thingTypesSA/:id              controllers.superAdmin.ThingTypeController.showThingTypeDetails(id : java.util.UUID)
GET         /api/thingTypesSA                  controllers.superAdmin.ThingTypeController.showThingType
POST        /api/thingTypesSA                  controllers.superAdmin.ThingTypeController.addThingType
PUT         /api/thingTypesSA/:id              controllers.superAdmin.ThingTypeController.updateThingType(id: java.util.UUID)
DELETE      /api/thingTypesSA/:id              controllers.superAdmin.ThingTypeController.delete(id: java.util.UUID)

GET         /api/usersSA/:id                   controllers.superAdmin.UserController.showUserDetails(id: java.util.UUID)
GET         /api/usersSA                       controllers.superAdmin.UserController.showUsers
POST        /api/usersSA                       controllers.superAdmin.UserController.addUser
PUT         /api/usersSA/:id                   controllers.superAdmin.UserController.updateUser(id: java.util.UUID)
DELETE      /api/usersSA/:id                   controllers.superAdmin.UserController.delete(id: java.util.UUID)

GET         /api/companiesSA/:id               controllers.superAdmin.CompanyController.showCompanyDetails(id: java.util.UUID)
