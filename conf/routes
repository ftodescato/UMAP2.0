# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET         /                                  controllers.Assets.at(path="/public", file="html/layout.html")
GET         /testDue                           controllers.ApplicationController.index
GET         /user                              controllers.ApplicationController.user
GET         /signOut                           controllers.ApplicationController.signOut
POST        /test                              controllers.ApplicationController.test
POST        /signIn                            controllers.shared.AuthController.authenticate
GET         /api/getrole                       controllers.shared.AuthController.getRole
GET         /corr                              controllers.ApplicationController.correlation
GET         /sumstat/:mv                       controllers.ApplicationController.sumStatistic(mv:String)
GET         /NB/:id                            controllers.ApplicationController.NaiveBayes(id: java.util.UUID)
GET         /logreg/:id                        controllers.ApplicationController.LogReg(id: java.util.UUID)

#ACCOUNT
GET         /api/account                       controllers.shared.account.AccountController.getInfo
PUT         /api/account                       controllers.shared.account.AccountController.updateAccount
PUT         /api/account/psw                   controllers.shared.account.AccountController.updatePassword

#ADMIN

GET         /api/usersA/:id                    controllers.admin.UserController.showUserDetails(id: java.util.UUID)
GET         /api/usersA                        controllers.admin.UserController.showUsers
POST        /api/usersA                        controllers.admin.UserController.addUser
PUT         /api/usersA/:id                    controllers.admin.UserController.updateUser(id: java.util.UUID)
DELETE      /api/usersA/:id                    controllers.admin.UserController.delete(id: java.util.UUID)

# ADMIN+USER

GET /api/thingTypes                            controllers.shared.thingType.ThingTypeController.showThingType
GET /api/thingTypes/:id                        controllers.shared.thingType.ThingTypeController.showThingTypeDetails(id: java.util.UUID)
GET /api/things                                controllers.shared.thingType.ThingTypeController.showThings
GET /api/things/:id                             controllers.shared.thingType.ThingTypeController.showThingDetails(id: java.util.UUID)

#SUPERADMIN
PUT         /api/passwordsSA/:id               controllers.superAdmin.PasswordController.updatePassword(id: java.util.UUID)
PUT         /api/resetPasswordsSA              controllers.shared.account.AccountController.resetPassword
