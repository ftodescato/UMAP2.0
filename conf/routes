# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET         /                                   controllers.Assets.at(path="/public", file="html/layout.html")
GET         /user                               controllers.ApplicationController.user
GET         /signOut                            controllers.ApplicationController.signOut
POST        /signIn                             controllers.shared.account.AuthController.authenticate
GET         /api/getrole                        controllers.shared.account.AuthController.getRole

POST        /api/functions                      controllers.superAdmin.FunctionController.addFunction

#ACCOUNT
GET         /api/account                        controllers.shared.account.AccountController.getInfo
PUT         /api/account                        controllers.shared.account.AccountController.updateAccount
POST        /api/account/pswUpdate              controllers.shared.account.AccountController.updatePassword
POST        /api/account/pswNew                 controllers.shared.account.AccountController.setNewPassword
POST        /api/account/resetPasswords         controllers.shared.account.AccountController.resetPassword


#ADMIN+SUPERADMIN
PUT         /api/engine/datasTT                 controllers.superAdmin.CompanyController.selectDataFromThingType
POST        /api/engine/functions               controllers.superAdmin.CompanyController.selectFunction
GET         /api/engine/functions               controllers.superAdmin.FunctionController.showFunctions

#ADMIN
POST        /api/charts                         controllers.admin.ChartController.addChart
GET         /api/charts/:id                     controllers.admin.ChartController.showCharts(id: java.util.UUID)
DELETE      /api/charts/:id                     controllers.admin.ChartController.delete(id: java.util.UUID)

GET         /api/usersA/:id                     controllers.admin.UserController.showUserDetails(id: java.util.UUID)
GET         /api/usersA                         controllers.admin.UserController.showUsers
POST        /api/usersA                         controllers.admin.UserController.addUser
PUT         /api/usersA/:id                     controllers.admin.UserController.updateUser(id: java.util.UUID)
DELETE      /api/usersA/:id                     controllers.admin.UserController.delete(id: java.util.UUID)
GET         /api/getMyCompany                   controllers.admin.UserController.getMyCompany
POST        /api/engineA/functions              controllers.admin.FunctionController.selectFunction
GET        /api/engineA/functions               controllers.admin.FunctionController.selectFunction



#ADMIN+USER
GET         /api/thingTypes                     controllers.shared.adminUser.ThingTypeController.showThingType
GET         /api/thingTypes/:id                 controllers.shared.adminUser.ThingTypeController.showThingTypeDetails(id: java.util.UUID)
GET         /api/things                         controllers.shared.adminUser.ThingTypeController.showThings
GET         /api/things/:id                     controllers.shared.adminUser.ThingTypeController.showThingDetails(id: java.util.UUID)
GET         /api/notifications/:id              controllers.shared.adminUser.NotificationController.showNotificationDetails(id: java.util.UUID)
PUT         /api/notifications/:id              controllers.shared.adminUser.NotificationController.update(id: java.util.UUID)
GET         /api/notifications/:id              controllers.shared.adminUser.NotificationController.showNotificationDetails(id: java.util.UUID)
GET         /api/notifications                  controllers.shared.adminUser.NotificationController.showNotifications
POST        /api/notifications              controllers.shared.adminUser.NotificationController.addNotification
#GET        /api/notificationsOfTT/:id          controllers.shared.adminUser.NotificationController.showNotificationOfThingType(id: java.util.UUID)
DELETE      /api/notifications/:id              controllers.shared.adminUser.NotificationController.delete(id: java.util.UUID)
GET         /api/graphics/:id                   controllers.shared.adminUser.GraphicController.createGraphic(id: java.util.UUID)

#SUPERADMIN
PUT         /api/passwordsSA/:id                controllers.superAdmin.PasswordController.updatePassword(id: java.util.UUID)
POST        /api/measurements                   controllers.superAdmin.ThingController.addMeasurements
POST        /api/newmeasurements                controllers.superAdmin.ThingController.addNewMeasurements


POST        /api/thingTypeVisibility            controllers.superAdmin.CompanyController.selectDataFromThingType

GET         /api/thingsSA/:id                  controllers.superAdmin.ThingController.showThingDetails(id: java.util.UUID)
